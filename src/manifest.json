{
    "manifest_version": 2,
    "name": "Auto-Mark Folder Read",
	"short_name": "AutoMarkRead",
    "description": "Automatically always keep messages marked as read in some common folders.",
    "version": "1.2",
    "author": "Silvester",
	"homepage_url": "https://github.com/thirdinsight/AutoMarkFolderRead",
    "applications": {
        "gecko": {
            "id": "autoMarkFolderRead.silvester@addons.thunderbird.net",
            "strict_min_version": "91.0"
        }
    },
	"background": {
        "scripts": [
            "js/common.js",
            "js/background.js"
        ]
    },
	"permissions": [
		"accountsRead",
		"messagesRead",
		"storage"
	],
	"icons": {
		"256": "icon256.png"
	},
	"options_ui": {
		"page": "html/options.html"
	}
}
